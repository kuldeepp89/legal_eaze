doctype html
html(lang='en')
  include ./partials/head.part.jade
  body(style = 'padding-top: 0')
    .container-fluid
      .row
        .col-md-12.no-padding
          nav.navbar-default(role='navigation')
            .container-fluid
              // Brand and toggle get grouped for better mobile display
              .navbar-header
                button.navbar-toggle(data-target='#bs-example-navbar-collapse-1', data-toggle='collapse', type='button')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand(href='/', style = 'margin-top: -8px') 
                  img(src='/public/images/logo.png', height='30px', width:='30px', margin-top: '-7px')
              // Collect the nav links, forms, and other content for toggling
              div#bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                  li
                    a(href='/') HOME
                  li
                    a(href='/aboutus') ABOUT US
                  li
                    a(href='/subscription') SUBSCRIPTION
                  li
                    a(href = '/faq') FAQ
                  li
                    a(href = 'privacy&security') PRIVACY & SECURITY
                  li
                    a(href='/contactus') CONTACT US
      .row 
        .col-md-12.no-padding(style='position:relative;height:auto;')
          .col-md-12(style='position:absolute; padding: 0px; z-index:10;')
            include ./partials/flash.part.jade
            .col-md-12.no-padding(style='height: 38em; overflow:hidden; padding: 0px')
              img(width='100%', style=' z-index:10;padding: 0px', src='/public/images/promo.jpg')
              .col-md-12(style='position:absolute;  top:0px; width:100%; padding: 0px;height:100%;background-color:rgba(248, 205, 192, 0.45); z-index:11;')
              .col-md-12.no-padding(style='position:absolute; overflow:hidden; top:0px; width:100%; height:100%;z-index:12')
                .col-md-7.nopadding(style='height:100%;')
                  #carousel-example-generic.carousel.slide(style='height:100%;', data-ride='carousel')
                    // Indicators
                    ol.carousel-indicators
                      li.active(data-slide-to='0', data-target='#carousel-example-generic')
                      li(data-slide-to='1', data-target='#carousel-example-generic')
                      li(data-slide-to='2', data-target='#carousel-example-generic')
                    // Wrapper for slides
                    .carousel-inner(style='100%;')
                      .item.active(style='100%;')
                        img(src = '/public/images/logo1.png' width = '100%' style = 'padding-top: 100px')
                        .carousel-caption
                         
                      .item(style='100%;')
                        img(src = '/public/images/logo1.png' width = '100%' style = 'padding-top: 100px')
                        .carousel-caption
                         
                      .item(style='100%;')
                        img(src = '/public/images/logo1.png' width = '100%' style = 'padding-top: 100px')
                        .carousel-caption
                          
                    // Controls
                .col-md-4(style='height:100%;')
                  .col-md-12(style='top: 7em; padding: 20px; background-color:rgba(248, 205, 192, 0.45);')
                    form(role='form' method = 'post' action = '/login')
                      .form-group
                        input(type='hidden', name='_csrf', value='#{csrfToken}')
                        input#username.form-control.input-lg.removeBack(type='email', placeholder='Username', name='email')
                      .form-group
                        input.form-control.input-lg#password.removeBack(type='password',name = 'password',placeholder='Password')
                      .form-group
                        button.btn.btn-empty.btn-block.btn-lg.removeBack(type='submit' style = 'padding-left: 15px' ) Login
                    .form-group
                      a(href = '/register' style= ' color: gray')
                        button.btn.btn-large.medium-blue.login-btn(type='submit')
                          | Register
                      a.removeBack(href = '/forgot' style= 'margin-left: 10px; ')  
                        | Forgot Password

        //footer
      .row
        .col-md-12(style = 'height: 5em; background-color: #f8f8f8; margin-top: 38em')
          .col-md-12(style = 'top: .5em; left: 1em')
            
    script(src='/public/js/vendor/jquery-1.11.1.min.js', type='text/javascript')
    script(src='/public/js/vendor/bootstrap.min.js', type='text/javascript')
  